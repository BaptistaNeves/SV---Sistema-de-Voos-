    <div class="form-group row">
        <label asp-for="Descricao" class="col-sm-2 col-form-label text-right">Descrição:</label>
        <div class="col-sm-6">
            <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição ..."></textarea>
        </div>
    </div>
</div>