@model SV.Application.InputModels.Funcionarios.CategoriaFuncionarioInputModel

<div class="card-body">
    <div class="form-group row">
        <label asp-for="Nome" class="col-sm-2 col-form-label text-right">Nome:</label>
        <div class="col-sm-6">
            <input asp-for="Nome" class="form-control" placeholder="....">
