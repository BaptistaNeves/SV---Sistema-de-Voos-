@model IEnumerable<SV.Core.Entities.Aeroportos.Aeroporto>

@{
    ViewData["Title"] = "Aeroportos";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Aeroportos</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Painel" asp-controller="Home" asp-action="Index">Ínicio</a></li>
                    <li class="breadcrumb-item active">Aeroportos</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <a asp-action="Create" class="btn btn-sm btn-success">
                                <i class="fa fa-plus"></i> Novo Aeroporto
                            </a>
                        </h3>

                        <div class="card-tools">
                            <ul class="pagination pagination-sm float-right">
                                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                            </ul>
                        </div>
                    </div>

                    @if (Model.Count() > 0)
                    {
                        <div class="card-body table-responsive p-0" style="height: 300px;">
                            <table class="table table-head-fixed text-nowrap table-hover">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th class="text-center">Cidade</th>
                                        <th class="text-center">País</th>
                                        <th class="text-center">Activo</th>
                                        <th colspan="2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var aeroporto in Model)
                                    {

                                        <tr>
                                            <td>@aeroporto.Nome</td>
                                            <td class="text-center">@aeroporto.Cidade.Nome</td>
                                            <td class="text-center">@aeroporto.Cidade.Pais</td>
                                            <td class="text-center">
                                                @if (aeroporto.Activo == true)
                                                {
                                                    <input type="checkbox" class="form-check-inline" checked disabled />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="form-check-inline" disabled />
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a class="btn-sm btn-primary" asp-action="Edit" asp-route-id="@aeroporto.Id"><i class="fa fa-edit"></i></a>
                                                <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@aeroporto.Id" onclick="return confirm('Deseja realmente excluir este Aeroporto?')"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-warning py-3 text-center">
                            <p><strong>Nenhum Aeroporto cadastrado!</strong></p>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

