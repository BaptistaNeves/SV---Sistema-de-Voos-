@model SV.UI.Admin.Dashboard.ViewModels.Aeroportos.AeroportoViewModel

<div class="card-body">
    <div class="form-group row">
        <label asp-for="@Model.AeroportoModel.Nome" class="col-sm-2 col-form-label text-right">Nome:</label>
        <div class="col-sm-6">
            <input asp-for="@Model.AeroportoModel.Nome" class="form-control" placeholder="....">
            <span class="text-danger" asp-validation-for="@Model.AeroportoModel.Nome"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.AeroportoModel.CidadeId" class="col-sm-2 col-form-label text-right">Cidade:</label>
        <div class="col-sm-6">
            <select class="form-control" asp-for="@Model.AeroportoModel.CidadeId" asp-items="@(new SelectList(Model.Cidades, "Id", "Nome"))">
                <option disabled selected>--Selecione a Cidade--</option>
            </select>
            <span class="text-danger" asp-validation-for="@Model.AeroportoModel.CidadeId"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-6 custom-control custom-checkbox">
            <input asp-for="@Model.AeroportoModel.Activo" class="custom-control-input" type="checkbox" checked>
            <label asp-for="@Model.AeroportoModel.Activo" class="custom-control-label">Activo</label>
        </div>
    </div>
</div>