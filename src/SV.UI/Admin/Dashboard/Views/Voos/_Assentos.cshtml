@model SV.UI.Admin.Dashboard.ViewModels.Voos.VooViewModel

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <a asp-action="UpSertAssento" asp-route-id="@Model.VooInputModel.Id" class="btn btn-sm btn-success" data-modal="">
                                <i class="fa fa-plus"></i> Novo Assento
                            </a>
                        </h3>

                        <div class="card-tools">
                            <ul class="pagination pagination-sm float-right">
                                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                            </ul>
                        </div>
                    </div>

                    @if (Model.Assentos.Count() > 0)
                    {
                        <div class="card-body table-responsive p-0" style="height: 300px;">
                            <table class="table table-head-fixed text-nowrap table-hover">
                                <thead>
                                    <tr>
                                        <th>Número</th>
                                        <th class="text-center">Classe</th>
                                        <th colspan="2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assento in Model.Assentos)
                                    {

                                        <tr>
                                            <td>@assento.Numero</td>
                                            <td class="text-center">@assento.Classe.Descricao</td>
                                            <td class="text-center">
                                                <a class="btn-sm btn-primary" asp-action="UpSertAssento" asp-route-id="@assento.Id" data-modal=""><i class="fa fa-edit"></i></a>
                                                <a class="btn-sm btn-danger" asp-action="DeleteAssento" asp-route-id="@assento.Id" onclick="return confirm('Deseja realmente excluir este Assento?')"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-warning py-3 text-center">
                            <p><strong>Nenhum assento cadastrado!</strong></p>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

